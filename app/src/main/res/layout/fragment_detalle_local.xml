<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginTop="24dp"
    tools:context=".fragment.DetalleLocalFragment">

    <!-- Título del local -->
<TextView
android:id="@+id/tituloLocal"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Nombre del Local"
android:textSize="24sp"
android:textStyle="bold"
android:layout_gravity="center"
android:padding="8dp"/>

    <!-- Mapa del local -->
<fragment
android:id="@+id/map"
android:name="com.google.android.gms.maps.SupportMapFragment"
android:layout_width="match_parent"
android:layout_height="444dp"
android:layout_marginBottom="16dp" />

    <!-- Contenedor para la información del local -->
<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="@color/verde_claro"
android:padding="16dp"
android:orientation="vertical">

<!-- Información del local -->
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="16dp">

    <ImageView
        android:layout_width="35dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="8dp"
        android:contentDescription="Casa"
        android:src="@drawable/ic_casa" />

    <TextView
        android:id="@+id/direccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dirección: Calle Falsa 123"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>
</LinearLayout>

<TextView
    android:id="@+id/horarios"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Horarios: Lunes a Viernes 9:00 - 18:00"
    android:textSize="18sp"
    android:textStyle="bold"
    android:layout_marginBottom="16dp"/>

<!-- Descripción adicional del local -->

<!-- Contenedor para los logos -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:gravity="center"
    android:orientation="horizontal">

    <!-- Logo de WhatsApp -->
    <ImageView
        android:id="@+id/logoWhatsApp"
        android:layout_width="62dp"
        android:layout_height="58dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="WhatsApp"
        android:src="@drawable/whastapp" />

    <!-- Logo de Instagram -->
    <ImageView
        android:id="@+id/logoInstagram"
        android:layout_width="56dp"
        android:layout_height="53dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="Instagram"
        android:src="@drawable/instagram" />

    <!-- Logo de Correo -->
    <ImageView
        android:id="@+id/logoEmail"
        android:layout_width="59dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="Correo"
        android:src="@drawable/mail" />
</LinearLayout>
</LinearLayout>
    </LinearLayout>
