<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/noticiasMain"
    tools:context=".MainActivity">

    <!-- Imagen clickeable y texto -->
    <LinearLayout
        android:id="@+id/encabezado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_encabezado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_placeholder2"
            android:contentDescription="@string/img_encabezado_desc"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:id="@+id/txt_encabezado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nuevo sistema eólico"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:layout_gravity="center"
            android:paddingTop="8dp" />
    </LinearLayout>

    <!-- Toolbar con barra de búsqueda -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toBottomOf="@id/encabezado"
        android:background="@drawable/edit_text_bg"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="@null"/>

    <EditText
        android:id="@+id/search_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:hint="Buscar..."
        android:background="@drawable/edit_text_bg"
        app:layout_constraintTop_toBottomOf="@id/encabezado"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="8dp"/>


    <!-- ViewPager para la paginación -->
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón "Ver más" -->
    <Button
        android:id="@+id/btn_mostrarMas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:backgroundTint="#4F9A6E"
        android:text="Ver Más..."
        android:textColor="#ffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewPager" />

</androidx.constraintlayout.widget.ConstraintLayout>