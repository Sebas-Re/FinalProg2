<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp"
    android:fitsSystemWindows="true">

    <!-- Título del Foro -->
    <TextView
        android:id="@+id/tv_forum_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Título del Foro"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/titulo_foro_burbuja"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

    <!-- Cuerpo del Foro (Contenido principal) -->
    <TextView
        android:id="@+id/tv_forum_body"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Aquí va el contenido del foro seleccionado"
        android:textColor="#000"
        android:textSize="16sp"
        android:gravity="start"
        android:background="@drawable/cuerpo_foro_burbuja"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_forum_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"/>

    <!-- Sección de comentarios (simulación de mensajes de ejemplo) -->
    <LinearLayout
        android:id="@+id/messages_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/tv_forum_body"
        app:layout_constraintBottom_toTopOf="@id/commentBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp">

        <!-- Aquí puedes repetir bloques de mensajes de ejemplo, como antes -->
        <!-- Mensaje 1 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp"/>

        <!-- Puedes agregar más bloques de mensajes aquí -->
    </LinearLayout>

    <!-- Barra para agregar un nuevo comentario -->
    <LinearLayout
        android:id="@+id/commentBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp">

        <EditText
            android:id="@+id/et_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Escribe un comentario..."
            android:background="@drawable/comment_box_bg"
            android:padding="10dp"
            android:textColor="#000"
            android:textColorHint="#999"/>

        <Button
            android:id="@+id/btn_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enviar"
            android:backgroundTint="#4F9A6E"
            android:textColor="#FFF"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
